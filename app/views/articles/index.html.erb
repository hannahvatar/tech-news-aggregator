<h1>Articles</h1>

<% if @articles.any? %>
  <div class="articles-container">
    <% @articles.each do |article| %>
      <div class="article">
        <h2><%= link_to article.title, article.url, target: "_blank" %></h2>
        <p>Source: <%= article.feed.name %></p>
        <p>Published: <%= article.published_at.strftime("%B %d, %Y at %I:%M %p") %></p>
        <% if article.content.present? %>
          <div class="article-content">
            <%= truncate(article.content, length: 200) %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="no-articles">
    <p>No articles found</p>
    <div class="debug-info">
      <h2>Debug Information:</h2>
      <p>Total Feeds: <%= Feed.count %></p>
      <p>Total Articles: <%= Article.count %></p>
    </div>
  </div>
<% end %>
