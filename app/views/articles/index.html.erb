<p>Find me in app/views/articles/index.html.erb</p>

<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-8">
  <h1 class="text-3xl font-bold mb-8">Latest Tech News</h1>

  <div class="grid gap-6">
    <% @articles.each do |article| %>
      <div class="bg-white p-6 rounded-lg shadow hover:shadow-md transition-shadow">
        <h2 class="text-xl font-semibold mb-2">
          <%= link_to article.title, article_path(article), class: "text-gray-900 hover:text-blue-600" %>
        </h2>

        <div class="text-sm text-gray-600 mb-4">
          <span><%= article.feed.name %></span>
          <span class="mx-2">â€¢</span>
          <span><%= time_ago_in_words(article.published_at) %> ago</span>
        </div>

        <%= link_to "Read more", article_path(article), class: "text-blue-600 hover:text-blue-800 text-sm font-medium" %>
      </div>
    <% end %>
  </div>
</div>
