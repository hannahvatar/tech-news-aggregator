<!-- app/views/reports/pdf.html.erb -->
<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Tech Insights Report</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      line-height: 1.6;
      color: #333;
      margin: 40px;
    }

    .header {
      text-align: center;
      margin-bottom: 30px;
    }

    .metadata {
      background: #f5f5f5;
      padding: 15px;
      margin-bottom: 30px;
      border-radius: 5px;
    }

    .metadata-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 15px;
    }

    .metadata-item {
      margin-bottom: 10px;
    }

    .label {
      color: #666;
      font-size: 0.9em;
    }

    .value {
      font-weight: bold;
    }

    .content {
      margin-top: 30px;
    }

    h1 { font-size: 24px; margin-bottom: 20px; }
    h2 { font-size: 20px; margin-bottom: 15px; }
    h3 { font-size: 16px; margin-bottom: 10px; }
  </style>
</head>
<body>
  <div class="header">
    <h1>Tech Insights Report</h1>
    <p>Generated on <%= Date.today.strftime("%B %d, %Y") %></p>
  </div>

  <div class="metadata">
    <h2>Report Details</h2>
    <div class="metadata-grid">
      <div class="metadata-item">
        <div class="label">Date Range</div>
        <div class="value"><%= metadata[:date_range] %></div>
      </div>
      <div class="metadata-item">
        <div class="label">Report Type</div>
        <div class="value"><%= metadata[:report_type].titleize %></div>
      </div>
      <div class="metadata-item">
        <div class="label">Detail Level</div>
        <div class="value"><%= metadata[:detail_level].titleize %></div>
      </div>
      <div class="metadata-item">
        <div class="label">Articles Analyzed</div>
        <div class="value"><%= metadata[:article_count] %></div>
      </div>
    </div>
  </div>

  <div class="content">
    <%= report_data.html_safe %>
  </div>
</body>
</html>
