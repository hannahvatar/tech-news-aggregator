<!-- app/views/layouts/pdf.html.erb -->
<!DOCTYPE html>
<html>
<head>
  <meta charset='utf-8'>
  <title>Tech Insights Report</title>
  <%= wicked_pdf_stylesheet_link_tag "pdf" %>
  <style>
    body {
      font-family: 'Helvetica', sans-serif;
      color: #333333;
      line-height: 1.6;
      margin: 0;
      padding: 20px;
    }

    .header {
      border-bottom: 2px solid #4a5568;
      padding-bottom: 20px;
      margin-bottom: 30px;
    }

    .title {
      font-size: 24px;
      color: #2d3748;
      margin-bottom: 10px;
    }

    .metadata {
      background-color: #f7fafc;
      border-radius: 8px;
      padding: 15px;
      margin-bottom: 30px;
    }

    .metadata-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 15px;
    }

    .metadata-item {
      margin-bottom: 10px;
    }

    .metadata-label {
      color: #718096;
      font-size: 14px;
      margin-bottom: 4px;
    }

    .metadata-value {
      font-weight: 600;
      color: #2d3748;
    }

    .content {
      margin-top: 30px;
    }

    .section {
      margin-bottom: 30px;
    }

    .section-title {
      font-size: 20px;
      color: #2d3748;
      margin-bottom: 15px;
      border-bottom: 1px solid #e2e8f0;
      padding-bottom: 8px;
    }

    .footer {
      margin-top: 50px;
      padding-top: 20px;
      border-top: 1px solid #e2e8f0;
      font-size: 12px;
      color: #718096;
      text-align: center;
    }

    .page-number {
      text-align: center;
      font-size: 12px;
      color: #718096;
      margin-top: 20px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 20px;
    }

    th, td {
      padding: 12px;
      border: 1px solid #e2e8f0;
    }

    th {
      background-color: #f7fafc;
      font-weight: 600;
      text-align: left;
    }

    img {
      max-width: 100%;
      height: auto;
      margin: 20px 0;
    }

    .chart-container {
      margin: 30px 0;
      text-align: center;
    }
  </style>
</head>

<body>
  <div class="header">
    <%= wicked_pdf_image_tag 'your_logo.png', width: 150 %>
  </div>

  <%= yield %>

  <div class="footer">
    <p>Generated on <%= Time.current.strftime('%B %d, %Y at %H:%M %Z') %></p>
    <div class="page-number">
      Page <span class="page"></span> of <span class="topage"></span>
    </div>
  </div>
</body>
</html>
